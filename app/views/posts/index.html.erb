<div class="container">
  <h1>Posts</h1>
  <br>
  <%= link_to 'New Post', new_post_path, class: "btn btn-primary", style: "margin-bottom: 10px" %>

<div id="paginate_song">
  <%= paginate @posts, theme: "twitter-bootstrap-3" %>
</div>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th width="200px">Image</th>
        <th>Title</th>
        <th>Content</th>
        <th>User</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= image_tag get_image(post), size:"80x80" %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
          <td><%= post.user.username %></td>
          <td>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
